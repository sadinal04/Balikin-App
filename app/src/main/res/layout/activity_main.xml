<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1616"
    android:padding="16dp">

    <!-- Logo Aplikasi -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logobalikin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <!-- Judul Aplikasi -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balik.in"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/app_logo"
        android:layout_marginTop="16dp" />

    <!-- Deskripsi -->
    <TextView
        android:id="@+id/app_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temukan &amp; Kembalikan Barang Hilang di FMIPA USK\n\nAplikasi kampus untuk pelaporan dan pencarian barang hilang secara mudah, cepat, dan aman."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_below="@id/app_title"
        android:layout_marginTop="24dp"
        android:paddingHorizontal="16dp" />

    <!-- Tombol Login -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:backgroundTint="#5555"
        android:textColor="#FFFFFF"
        android:layout_below="@id/app_description"
        android:layout_marginTop="40dp"
        android:padding="12dp" />

    <!-- Tombol Register -->
    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:backgroundTint="#5555"
        android:textColor="#FFFFFF"
        android:layout_below="@id/login_button"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

</RelativeLayout>
